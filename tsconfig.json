{
  "compilerOptions": {
    "target": "es2022",             // Set the ECMAScript target to ES2022
    "module": "commonjs",           // Set the module code generation
    "strict": true,                 // Enable all strict type-checking options
    "esModuleInterop": true,        // Enable compatibility with ES6 modules
    "skipLibCheck": true,           // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
    "outDir": "./dist",             // Specify the output directory for compiled JavaScript files
    "rootDir": "./src",             // Specify the root directory of input files
  },
  "include": ["src/**/*"],          // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]       // Exclude the node_modules directory
}

